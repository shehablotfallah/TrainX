@model TrainX.Models.User

@{
    ViewData["Title"] = "Details";
}

<section class="section">
    <div class="container text-light">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="cta-content">
                    <div class="section-heading">
                        <h2>Details <em>User</em></h2>
                        <img src="~/assets/images/line-dec.png" alt="waves">
                        <p>Training Studio is free CSS template for gyms and fitness centers. You are allowed to use this layout for your business website.</p>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <dl class="row mb-5">
                <dt class="col-sm-2 mb-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10 mb-2">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2 mb-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10 mb-2">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2 mb-2">
                    @Html.DisplayNameFor(model => model.Password)
                </dt>
                <dd class="col-sm-10 mb-2">
                    @Html.DisplayFor(model => model.Password)
                </dd>
                <dt class="col-sm-2 mb-2">
                    @Html.DisplayNameFor(model => model.Sport)
                </dt>
                <dd class="col-sm-10 mb-2">
                    @Html.DisplayFor(model => model.Sport.Name)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-success mr-2" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
            <div class="btn btn-outline-danger ml-2">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                <a class="text-capitalize text-light" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</section>

